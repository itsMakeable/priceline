*
	-webkit-tap-highlight-color rgba(0,0,0,0)
	box-sizing inherit
	&:before,
	&:after
		box-sizing inherit
	&:focus
		outline none
		
html
	font-size 62.5%
	-webkit-font-smoothing initial
	font-smoothing initial
	// text-rendering optimizeLegibility
	font-smooth always
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	font-family sans-serif
	position relative
	min-height 100%
	overflow-x hidden
	
	
body
	-webkit-touch-callout none
	-webkit-text-size-adjust none
	// -webkit-user-select none
	color black
	height 100%
	transition opacity 0.1s ease
	background-color #f0f0f0
	&.is-active
		opacity: 1 !important
i
	display inline-block
	vertical-align middle
	font inherit

img
	width 100%
	display block
	
.hidden
	position: absolute
	height: 0
	width: 0
	visibility: hidden

::-moz-selection
	background-color: blue
	color white

::selection
	background-color: blue
	color white

.bg--black
	background-color deepblack

.overlay
	background-color rgba(deepblack,0.5)
	@extend $absolute-cover
	z-index 0
	opacity 0
	transition 0.35s ease-in-out
	&.is-active
		transition 0.25s ease-in-out
		z-index 1
		opacity 1
	

.hide-large
	+above(960px)
		display:none !important
.hide-small
	+below(960px)
		display:none !important

.header-main
	+below(1024px)
		height 90vh !important

.logo
	width 170px
	position absolute
	right 0
	left -300px
	margin -5px auto 0 auto
	+below(960px)
		width 150px
		left -170px
		margin -15px auto 0 auto
	+below(540px)
		width 120px
		left 0
		margin -25px auto 0 auto