*
	-webkit-tap-highlight-color rgba(0,0,0,0)
	box-sizing inherit
	&:before,
	&:after
		box-sizing inherit
	&:focus
		outline none
		
html
	font-size 62.5%
	-webkit-font-smoothing initial
	font-smoothing initial
	// text-rendering optimizeLegibility
	font-smooth always
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	font-family sans-serif
	position relative
	min-height 100%
	overflow-x hidden
	
h1,
h2 strong,
.logo,
.icon-arrow
	opacity 0
	transform translateY(100px)

.csstransforms.csstransitions
	body.is-active
		h1,
		h2 strong,
		.logo,
		.icon-arrow
			opacity 0
			transform translateY(100px)
			animation fadein 0.6s ease-out forwards
		.logo
			animation-delay 0s
		h1
			animation-delay 0.05s
		h2 strong
			animation-delay 0.1s
		.icon-arrow
			animation-delay 0.15s
				
body
	-webkit-touch-callout none
	-webkit-text-size-adjust none
	// -webkit-user-select none
	color black
	height 100%
	transition opacity 0.1s ease
	// background-color #f0f0f0
	&.is-active
		opacity: 1 !important
		h1,
		h2 strong,
		.logo,
		.icon-arrow
			opacity 1
			transform translateY(0px)
		
i
	display inline-block
	vertical-align middle
	font inherit

img
	width 100%
	display block
	
.hidden
	position: absolute
	height: 0
	width: 0
	visibility: hidden

::-moz-selection
	background-color: blue
	color white

::selection
	background-color: blue
	color white

.bg--black
	background-color deepblack

.overlay
	background-color rgba(deepblack,0.5)
	@extend $absolute-cover
	z-index 0
	opacity 0
	transition 0.35s ease-in-out
	&.is-active
		transition 0.25s ease-in-out
		z-index 1
		opacity 1

.hide-large
	+above(960px)
		display:none !important
.hide-small
	+below(960px)
		display:none !important

.header-main
	+below(1024px)
		height 90vh !important

.logo
	width 170px
	position absolute
	right 0
	left -300px
	margin -5px auto 0 auto
	+below(960px)
		width 150px
		left -170px
		margin -15px auto 0 auto
	+below(540px)
		width 120px
		left 0
		margin -25px auto 0 auto

.parallax-mirror
	z-index -1 !important
	visibility visible !important
	height 584px !important
	.parallax-slider
		height (584px *1.4) !important
		width auto !important

.has-animation
	transform translateY(100px)
	opacity 0
	transition 0.6s ease-out
	&.big-number
		transform translateX(100px)
	&.is-1,
	&.is-3
		transform translateX(-100px)
	&.no-animation
		transition 0s linear
		transform none
		opacity 1
	&.animated
		transform none
		opacity 1
		
@keyframes fadein
	0%
		opacity 0
		transform translateY(100px)
	10%
		opacity 0
	100%
		transform none
		opacity 1