.number-block__instas
	max-width 66.666%
	overflow-x scroll
	overflow-y hidden
	height inherit
	position relative
	.number-block__instas-container
		width 130%
		overflow hidden

.insta-block
	size 166.666666667px
	background-color white
	position relative
	float left
	.center
		width 100%
	.bottom
		position absolute
		width 100%
		bottom 0
	
.insta-block__img
	margin auto
	border-radius 50%
	padding 10px
	border 2px solid blue
	width 62px
	height 62px
	overflow hidden
	margin-bottom 6px
	&.is-small
		border none
		padding 0
		size 32px
		position relative
		bottom -23px

.insta-block__name
	color blue
	fs(15px)
	upcase()
	letter-spacing 2px
	line-height 1.8
	font-family boldcond

.insta-block__info
	fs(12px)
	font-family lightcond
	color gray
	letter-spacing 2px
	upcase()
	span
		size 14px
		display inline-block
		vertical-align middle
		margin-right 5px
		background: url(unquote('data:image/svg+xml;base64,')) no-repeat; 
		background-size: cover;

.insta-block__info-bg
	background-color rgba(deepblack,0.9)
	margin 0 10px
	padding 30px 0 10px
		

.insta-overlay
	background-color white
	clearfix()
	@extend $absolute-cover
	width 588px
	height 326px
	text-align left
	.close-button
		size 20px
		position absolute
		top 18px
		right 18px
	.center
		width 80%
		
	p
		fs(12px)
	
.insta-overlay__col
	position: relative
	span(1/2)
	height inherit
	&.insta-overlay__col--right
		float right

.insta-overlay__name
	fs(44px)
	font-family boldcond
	padding 5px 0 10px 0