/*!**
  title: Headers
  section: Typography
  example: |
    <h1>H1 Header</h1>
    <h2>H2 Header</h2>
    <h3>H3 Header</h3>
    <h4>H4 Header</h4>
    <h5>H5 Header</h5>
    <h6>H6 Header</h6>
***/

h1, h2, h3, h4, h5, h6
  // text-rendering optimizeLegibility
  font-smooth always
  -moz-osx-font-smoothing: grayscale
  color deepblack
  font-family lightcond
  strong
    font-family boldcond
    
h1 strong
    font-family medcond !important
    font-weight 400 !important

h2 strong
    font-family regcond !important
.rules-page
  h1, h2, h3, h4, h5, h6
    // text-rendering optimizeLegibility
    font-smooth always
    -moz-osx-font-smoothing: grayscale
    color deepblack
    font-family regular
    strong
      font-family bold
      
  h1 strong
      font-family bold !important
      font-weight 400 !important

  h2 strong
      font-family bold !important
  h3 strong
    fs(18px)    
    font-family regular !important
    line-height 1.4
  p, ol
    padding-bottom 16px
    strong
      display block
      padding-top 30px
      padding-bottom 10px
  ol
    padding-bottom 30px
    li
      padding-bottom 10px
h1, h2, h3, h4, h5, h6, p, li
  font-weight: normal
  color inherit

h1
  +below(1080px)
    font-size 100px !important
  +below(540px)
    font-size 60px !important
    margin-bottom 20px
    
.h3
  fs(52px)
  upcase()
  
.h4
  upcase()
  fs(26px)
  .underline
    padding-bottom 20px

.h5
  upcase()
  fs(72px)
  padding-bottom 12px
  +below(540px)
    fs(54px)
  
.h6
  fs(27px)
  font-family lightcond !important

.underline
  border-bottom 8px solid currentColor
  padding 0 10px
  display inline-block
  margin-bottom 30px
  &.is-small
    margin-bottom 20px
  &.no-padding
    padding 0
    .h3
      padding-bottom 20px
    .h4
      padding-bottom 15px

p, ol
  fs(18px) 
  line-height 1.3
  padding-bottom px(16)
  font-family regular
  +below(540px)
    fs(14px)

.text--light
  h1, h2, h3, h4, h5, h6, p, li
    color: white
  .underline
    border-bottom-color white
  
.details-copy
  +below(540px)
    fs(15px)
    line-height 1.7
    padding 0 20px