a
	reset-link()
	cursor pointer
	text-decoration none
	transition all 0.2s ease
	&:focus
		outline: 0
	&:link
		color blue
	&:hover
		color darkblue
	&:active
		color darkblue
		transform scale(0.99)
		transform-origin 50% 50%
	&[disabled]
		color gray !important
		transform scale(1) !important
	&:visited
		color blue

.button,
a.button
	background-color white
	border 1px solid black
	color black
	padding 16px
	border-radius 25px
	fs(18px)
	margin-top 10px
	upcase()
	display inline-block
	font-family regular
	white-space nowrap
	&.instabutton
		background-color white
		border 1px solid black
		padding 16px 16px 16px 20px
		fs(18px)
		upcase()
		color black
		border-radius 25px
		font-family boldcond
		+below(960px)
			color blue
			border none
